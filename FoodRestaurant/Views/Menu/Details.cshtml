@model FoodRestaurant.Models.Dish
@{
	ViewData["Title"] = Model.Name;
}
<div class="container">
	<div class="d-flex justify-content-center">
		<h3>@Model.Name</h3>
	</div>
	<div class="d-flex justify-content-center">
		<img src="@Model.imageUrl" width="30%" height="70%">
	</div>
	<div class="d-flex justify-content-center">
		@Model.price.ToString() ₽
	</div>
	<div class="d-flex justify-content-center">
		Ingridients
		<ul>
			@foreach (var item in Model.DishIngridients)
			{
				<li>
					@item.Ingridients.Name
				</li>	
			
			}
		</ul>
	</div>
	<a class="btn btn-info d-flex justify-content-center" asp-action="Index" >To Main Menu</a>
</div>